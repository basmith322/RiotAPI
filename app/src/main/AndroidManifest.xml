<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.riotapi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".RiotAPiApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.NoNetwork" />
        <activity
            android:name=".ui.MatchHistoryDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Match Details" />
        <activity
            android:name=".ui.ChampInfoActivity"
            android:configChanges="orientation|screenSize"
            android:label="Champion Information" />
        <activity
            android:name=".ui.LinkedSummonerActivity"
            android:configChanges="orientation|screenSize"
            android:label="Link Summoner" />
        <activity
            android:name=".ui.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="Riot API App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SummonerProfileActivity"
            android:configChanges="orientation|screenSize"
            android:label="Summoner Profile" />
        <activity
            android:name=".ui.ChampRotationActivity"
            android:configChanges="orientation|screenSize"
            android:label="Free Champion Rotation" />
        <activity
            android:name=".ui.MatchHistoryListActivity"
            android:configChanges="orientation|screenSize"
            android:label="Match History" />
        <activity
            android:name=".ui.ServerActivity"
            android:configChanges="orientation|screenSize"
            android:label="Server Status" />
        <activity
            android:name=".ui.RankedLadderActivity"
            android:configChanges="orientation|screenSize"
            android:label="Solo Queue Ladder" />
        <activity
            android:name=".ui.MenuActivity"
            android:configChanges="orientation|screenSize"
            android:label="Main Menu" />
        <activity
            android:name=".ui.LookupSummonerActivity"
            android:configChanges="orientation|screenSize"
            android:label="Summoner Lookup" />
        <activity
            android:name=".ui.SummonerDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Summoner Results" />
        <activity
            android:name=".ui.RegisterActivity"
            android:configChanges="orientation|screenSize"
            android:label="Register" />
    </application>

</manifest>